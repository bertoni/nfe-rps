{% extends 'NfeBundle:Include:base.html.twig' %}

{% block head %}
    {{ include('NfeBundle:Include:head.html.twig', { 'head': { 'title': 'Upload Retorno RPS' } }) }}
{% endblock %}

{% block body %}
    <body id="pageuploadrps">
        {% if erro != "" %}
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <ul>{{erro|raw}}</ul>
        </div>
        {% endif %}
        <form action="#" method="POST" enctype="multipart/form-data">
            <p>Faça o upload do retorno dos RPS submetidos na prefeitura. O arquivo deve estar no formato ".txt".</p>
            <div class="form-group">
                <label>Arquivo</label>
                <input type="file" name="file">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Enviar</button>
            </div>
        </form>
        
        {{ include('NfeBundle:Include:loadjs.html.twig') }}
    </body>
{% endblock %}